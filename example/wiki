#!/Users/taro/mosh/mosh ;; edit here
(import (rnrs)
        (srfi :39)
        (lambda wiki))

(parameterize ([wiki-data-direcoty "wikidata"]              ;; edit here
               [wiki-top-url "http://localhost:8001/wiki"]) ;; edit here
  (wiki-main))

#| Apache configuration sample
Listen 8001
<VirtualHost *:8001>
    DocumentRoot /Users/taro/repos-mosh/trunk/r6rs-examples
    AllowEncodedSlashes On
    AcceptPathInfo On
    <Directory "/Users/taro/repos-mosh/trunk/r6rs-examples">
        DirectoryIndex wiki
        Options Indexes FollowSymLinks
        AllowOverride None
        <FilesMatch "^wiki$">
        SetHandler cgi-script
        </FilesMatch>
        Options ExecCGI
        Order allow,deny
        Allow from all
    </Directory>
    ErrorLog  /var/log/apache2/wiki.error_log
    CustomLog /var/log/apache2/wiki.access_log combined env=!nolog
</VirtualHost>
|#
